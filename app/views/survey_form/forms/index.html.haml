%table.table
  %thead
    %tr
      %th{:scope => "col"} #
      %th{:scope => "col"} name
      %th{:scope => "col"}
      %th{:scope => "col"}
  %tbody
    - @forms.each do |form|
      %tr
        %th{:scope => "row"} 1
        %td= link_to form.name, form_path(form)
        %td= link_to 'edit', edit_form_path(form)
        %td= link_to 'delete', form_path(form), method: :delete, data: { confirm: 'Are you sure to delete this form?'}
