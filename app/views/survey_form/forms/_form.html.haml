= simple_form_for @form, class: 'form survey-form' do |f|
  = f.input :name

  - sections = f.object.sections.select{ |section| !section.default }

  = f.fields_for :sections, sections do |sf|
    = render 'section_fields', f: sf

  = link_to_add_fields t('form.add_section'), f, :sections

  .actions
    = f.submit t('shared.save'), class: 'btn btn-primary'
    = link_to t('shared.cancel'), forms_path, class: 'btn btn-secondary'

  :javascript
    locale = {
      please_select: "#{t('form.please_select')}",
      skip_logic_not: "#{t('form.skip_logic_not')}",
      any_of: "#{t('form.any_of')}",
      match_all_of: "#{t('form.match_all_of')}"
    }
