.field-type-wrapper
  .d-flex
    .flex-grow-1
      .field-type-list{'data-field_type' => 'SurveyForm::Fields::SelectOneField'}
        %i.far.fa-dot-circle.icon
        Select one

      .field-type-list{'data-field_type' => 'SurveyForm::Fields::SelectMultipleField'}
        %i.fas.fa-list-ul.icon
        Select Multiple

      .field-type-list{'data-field_type' => 'SurveyForm::Fields::DateField'}
        %i.fas.fa-calendar-alt.icon
        Date

      .field-type-list{'data-field_type' => 'SurveyForm::Fields::DateTimeField'}
        %i.far.fa-clock.icon
        DateTime

      .field-type-list{'data-field_type' => 'SurveyForm::Fields::IntegerField'}
        %strong.icon 123
        Integer

    .flex-grow-1
      .field-type-list{'data-field_type' => 'SurveyForm::Fields::NoteField'}
        %i.fas.fa-bars.icon
        Note
      .field-type-list{'data-field_type' => 'SurveyForm::Fields::TextField'}
        %strong.icon abc
        Text

      .field-type-list{'data-field_type' => 'SurveyForm::Fields::ImageField'}
        %i.fas.fa-image.icon
        Image

      .field-type-list{'data-field_type' => 'SurveyForm::Fields::LocationField'}
        %i.fas.fa-map-marker-alt.icon
        Location

      .field-type-list{'data-field_type' => 'SurveyForm::Fields::FileField'}
        %i.fas.fa-paperclip.icon
        File

