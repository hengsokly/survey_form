.d-flex
  %ul.d-flex.flex-column.items
    %li.item.item-setting{'data-target' => '.setting-content'}= t('form.setting')
    %li.item.validation-trigger{'data-target' => '.validation-criteria-content'}= t('form.validation_criteria')
    %li.item.skip-logic{'data-target' => '.skip-logic-content'}= t('form.skip_logic')

  .contents
    .content.setting-content
      .form-check
        = f.check_box :required, { class: 'form-check-input field-required' }
        = f.label :required, t('form.required'), class: 'form-check-label required-label'

      .form-check
        = f.check_box :tracingable, { class: 'form-check-input' }
        = f.label :tracingable, t('form.tracingable'), class: 'form-check-label'

    .content.validation-criteria-content
      = render 'field_validation_content', f: f

    .content.skip-logic-content
      = f.hidden_field :relevant, class: 'skip-logic-field'
      .form-group.row
        %label.col-3=t('form.question')
        %select#relevant-code.form-control.col-9
      .form-group.row
        %label.col-3=t('form.condition')
        %select#relevant-operator.form-control.col-9
      .form-group.row
        %label.col-3=t('form.value')
        %textarea#relevant-value.form-control.relevant-value.col-9
